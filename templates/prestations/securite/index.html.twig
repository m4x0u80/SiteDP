{# templates/prestations/securite/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Sécurité au travail – DP Formation{% endblock %}

{# Image hero (remplace par ton visuel si besoin) #}
{% set HERO_REMOTE = asset('images/securite.jpg') %}
{% set HERO_LOCAL  = asset('images/securite.jpg') %}

{% block meta %}
  <link rel="preload" as="image" href="{{ HERO_REMOTE }}">
{% endblock %}

{% block body %}
{# ========== HERO (parallax 60vh) ========== #}
<section id="heroScroll" class="relative min-h-[60vh]">
  <div id="heroViewport" class="sticky top-0 h-[60vh] overflow-hidden">
    <img id="heroImg"
         src="{{ HERO_REMOTE }}"
         alt="Formations Sécurité – DP Formation"
         class="absolute inset-0 h-full w-full object-cover"
         style="object-position:50% 0%; transition:object-position 180ms ease-out; will-change:object-position;"
         onerror="this.onerror=null;this.src='{{ HERO_LOCAL }}';"
         loading="eager" fetchpriority="high" />
    <div class="absolute inset-0 bg-blue-600/40 mix-blend-multiply"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-[#ECF5FF]"></div>

    <div class="relative z-10 flex h-full items-center">
      <div class="mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl">
          <h1 class="text-3xl font-bold sm:text-4xl md:text-5xl">
            Sécurité au travail
          </h1>
          <p class="mt-3 text-base text-white/80 sm:text-lg">
            SST, AIPR, Échafaudage, Travail en hauteur, Élingage.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

{# ========== SECTION — Les formations Sécurité ========== #}
<section class="bg-[#ECF5FF] py-12 text-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-center text-xl font-bold">Nos prestations “Sécurité”</h2>

    {# On prépare deux rangées : 3 premières cartes, puis le reste (2) #}
    {% set row1 = items|slice(0,3) %}
    {% set row2 = items|slice(3) %}

    {# Rangée 1 : jusqu’à 3 cartes #}
    <div class="mt-8 flex flex-wrap justify-center gap-6">
      {% for key, item in row1 %}
        <a href="{{ path(item.route) }}"
           class="group block w-[280px] rounded-2xl bg-white ring-1 ring-slate-200 p-5 shadow-sm hover:shadow-lg transition-shadow">
          <div class="flex items-start gap-3">
            <div class="grid h-12 w-12 place-items-center rounded-xl bg-slate-100 overflow-hidden">
              <img
                src="{{ asset(item.img) }}"
                srcset="{{ asset(item.img) }} 1x, {{ asset(item.img|replace({'.png':'@2x.png', '.jpg':'@2x.jpg'})) }} 2x"
                alt="{{ item.title }}"
                class="h-8 w-8 object-contain"
                loading="lazy"
              />
            </div>
            <div class="min-w-0">
              <h3 class="text-base font-bold leading-tight truncate">{{ item.title }}</h3>
              <br>
              <p class="mt-1 text-sm text-slate-600 line-clamp-2 text-center item-center">{{ item.subtitle }}</p>
            </div>
          </div>
          
        </a>
      {% endfor %}
    </div>

    {# Rangée 2 : 2 cartes centrées #}
    {% if row2 is not empty %}
      <div class="mt-6 flex flex-wrap justify-center gap-6">
        {% for key, item in row2 %}
          <a href="{{ path(item.route) }}"
             class="group block w-[280px] rounded-2xl bg-white ring-1 ring-slate-200 p-5 shadow-sm hover:shadow-lg transition-shadow">
            <div class="flex items-start gap-3">
              <div class="grid h-12 w-12 place-items-center rounded-xl bg-slate-100 overflow-hidden">
                <img
                  src="{{ asset(item.img) }}"
                  srcset="{{ asset(item.img) }} 1x, {{ asset(item.img|replace({'.png':'@2x.png', '.jpg':'@2x.jpg'})) }} 2x"
                  alt="{{ item.title }}"
                  class="h-8 w-8 object-contain"
                  loading="lazy"
                />
              </div>
              <div class="min-w-0">
                <h3 class="text-base font-bold leading-tight truncate">{{ item.title }}</h3>
                <br>
                <p class="mt-1 text-sm text-slate-600 line-clamp-2 text-center item-center">{{ item.subtitle }}</p>
              </div>
            </div>
            
          </a>
        {% endfor %}
      </div>
    {% endif %}

    {# Bouton retour prestations #}
    <div class="mt-10 text-center">
      <a href="{{ path('app_prestations') }}"
         class="inline-flex items-center gap-2 rounded-xl bg-[#0000FF] px-4 py-2 text-white text-sm font-semibold shadow hover:brightness-110 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        ← Retour aux prestations
      </a>
    </div>
  </div>
</section>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    // Parallax smooth
    (function () {
      const wrapper  = document.getElementById('heroScroll');
      const viewport = document.getElementById('heroViewport');
      const img      = document.getElementById('heroImg');
      if (!wrapper || !viewport || !img) return;

      let curr = 0, target = 0, rafId = null;
      function computeTarget() {
        const start = wrapper.getBoundingClientRect().top + window.scrollY;
        const range = Math.max(1, viewport.offsetHeight);
        const y = window.scrollY - start;
        const pRaw = Math.min(Math.max(y / range, 0), 1);
        target = Math.min(pRaw, 0.97);
        tick();
      }
      function tick() {
        if (rafId) return;
        rafId = requestAnimationFrame(function animate() {
          rafId = null;
          curr += (target - curr) * 0.12;
          if (Math.abs(target - curr) < 0.001) curr = target;
          else rafId = requestAnimationFrame(animate);
          img.style.objectPosition = `50% ${Math.round(curr * 100)}%`;
        });
      }
      computeTarget();
      window.addEventListener('scroll', computeTarget, { passive: true });
      window.addEventListener('resize', computeTarget);
    })();
  </script>
{% endblock %}
