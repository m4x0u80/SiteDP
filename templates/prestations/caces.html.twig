            <img
              src="{{ asset('images/pictos/chariot.png') }}"
              srcset="{{ asset('images/pictos/chariot@2x.png') }} 2x"
              alt="Chariots"
              class="h-12 w-12 object-contain" loading="lazy" decoding="async">
          </div>
