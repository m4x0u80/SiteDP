{% extends 'base.html.twig' %}
{% block title %}En formation – DP Formation{% endblock %}

{% block body %}
<section class="bg-[#ECF5FF] py-12 text-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1 class="text-center text-xl font-bold">En formation</h1>

    <div class="mt-8 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {# Carte #}
      <a href="{{ path('app_prestations_formations_show', {slug:'chariots'}) }}"
